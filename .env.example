# ===========================================
# Bot Configuration - Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!

# Telegram Bot Token (from @BotFather)
# Get your token from: https://t.me/BotFather
BOT_TOKEN=your_bot_token_here

# MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_URI=your_mongodb_connection_uri_here

# âœ… Admin Configuration - Choose ONE of the following:
# Option 1: Single Admin (Recommended for single owner)
# Get your Telegram user ID from @userinfobot
ADMIN_ID=123456789

# Option 2: Multiple Admins (Use comma-separated IDs)
# ADMIN_IDS=123456789,987654321,555555555
# Note: ADMIN_IDS takes priority if both are set

# Optional: Logging Channels

# LOG_CHANNEL_ID: For critical errors and system logs
# LOG_CHANNEL_ID_VIDEOS: For video download reports with videos
# Get channel ID from @userinfobot (format: -100xxxxxxxxxx)
LOG_CHANNEL_ID=-100xxxxxxxxxx
LOG_CHANNEL_ID_VIDEOS=-100yyyyyyyyyy

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO


# Leave empty if you don't want logging
LOG_CHANNEL_ID=
LOG_CHANNEL_ID_VIDEOS=
LOG_LEVEL=INFO

# Optional: Deployment Configuration
# Only needed for webhook mode (production)
RAILWAY_PUBLIC_DOMAIN=
PORT=8443

# ===========================================
# Payment & API Configuration
# ===========================================

# Binance API Credentials (for payment processing)
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=YOUR_BINANCE_API_KEY_HERE
BINANCE_SECRET_KEY=YOUR_BINANCE_SECRET_KEY_HERE

# Binance Wallet Address (for donations/tips)
# Your Binance Pay ID for receiving support donations
# Default: 86847466 (replace with your own Pay ID)
BINANCE_WALLET=86847466

# Instagram Payment Contact
# Instagram username for payment support
INSTAGRAM_PAYMENT_USERNAME=your_instagram_username

# Subscription Pricing
# Price in USD for monthly VIP subscription
SUBSCRIPTION_PRICE_USD=3.0
